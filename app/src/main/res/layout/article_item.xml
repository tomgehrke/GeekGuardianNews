<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/NewsItem"
    android:layout_width="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/thumbnail_imageview"
        style="@style/Thumbnail"
        android:contentDescription="@string/article_thumbnail_description"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/section_textview"
            style="@style/ArticleSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Section" />

        <TextView
            android:id="@+id/title_textview"
            style="@style/ArticleTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Article Title" />

        <TextView
            android:id="@+id/byline_date_textview"
            style="@style/ArticleByLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="John Doe" />

        <TextView
            android:id="@+id/publication_date_textview"
            style="@style/ArticleDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="May 27, 2017 3:43PM" />

    </LinearLayout>

</LinearLayout>